.header
    border-bottom: 1px solid $gray
    min-height: 71px

    @media $tablet
        border-bottom: none

    .container 
        
        height 100%

    &__top
        min-height: 71px

        .container
            display flex
            align-items center
            height: 71px

    &__burger
        background-repeat: no-repeat
        background-image: url('../img/svg/burger.svg')
        background-size: contain
        width: 30px
        height: 30px
        cursor pointer

        @media $tablet
            width: 40px
            height: 40px

    &__logo
        flex-grow: 1
        text-align: center

        a
            display: inline-block

    &__logo-elem
        margin 0 auto
        background-repeat: no-repeat
        background-image: url('../img/svg/logo.svg')
        background-size: contain
        width: 108px
        height: 47px
        cursor pointer

        @media $tablet
            width: 153px
            height: 65px
            margin-top: 4px
            margin-bottom: -4px

    &__search-btn
        background-repeat: no-repeat
        background-image: url('../img/svg/header-search.svg')
        background-size: contain
        width: 30px
        height: 30px
        cursor pointer

        &_active
            background-image: url('../img/svg/search-blue.svg')


        @media $tablet
            width: 40px
            height: 40px

    &__menu
        display: none

    &__search
        padding-bottom 24px
        display none

        @media $tablet
            padding-top: 30px
        
        .search 

            &__form
                display flex

            &__input
                flex-grow 1

                .input
                    border-top-right-radius: 0
                    border-bottom-right-radius: 0
                    
                    text-align left

            &__btn

                .btn 
                    border-top-left-radius: 0
                    border-bottom-left-radius: 0

    &__mobile-menu 
        display none
        padding-top 16px
        color $white

        @media $tablet
            padding-top: 7px
            padding-bottom: 11px
            border-bottom-left-radius: 12px
            border-bottom-right-radius: 12px

        .mobile-menu

            &__item
                margin-bottom 16px

                font-weight 600
                font-size: 22px;
                line-height: 28px;
                letter-spacing: 0.02em;

                @media $tablet
                    font-size: 18px
                    border-bottom: 1px solid $white
                    margin-bottom: 0
                    position: relative

                a
                    @media $tablet
                        padding: 16px 60px 7px 30px
                        display: block

                &:last-child
                    margin-bottom: 0

                    @media $tablet
                        border-bottom: none

                &_active, &:hover

                    @media $tablet
                        background-color: $blue_light

            &__submenu
                margin-bottom 8px
                margin-top: 17px

                font-size: 18px;
                line-height: 28px;
                letter-spacing: 0.02em;
                font-weight: normal

                &:last-child
                    margin-bottom 0

                @media $tablet
                    display: none
                    position: absolute
                    left: 100%
                    top: 0
                    background-color: $blue
                    width: 307px
                    border-top-right-radius: 12px
                    border-bottom-right-radius: 12px
                    background-color: $blue_light
                    margin-top: 0

                    font-weight: 600
                    font-size: 16px
                    line-height: 22px

                .submenu



                        &__item
                            margin-bottom: 8px

                            @media $tablet
                                margin-bottom: 0

                            a
                                @media $tablet
                                    display: block
                                    padding: 20px 30px 16px 30px
                                    position: relative

                                &::after
                                    @media $tablet
                                        content: ''
                                        width: calc(100% - 60px)
                                        height: 1px
                                        display: block
                                        position: absolute
                                        bottom: 0
                                        left: 30px
                                        right: 30px
                                        background-color: $white

                            &:last-child

                                a::after
                                    @media $tablet
                                        display: none



    &_menu-mob-opened 

        height 100vh

        @media $tablet
            height: auto

        
        .header

            &__top
                background-color $blue

                @media $tablet
                    border-bottom: 1px solid $white
            
            &__search-btn
                background-image: url('../img/svg/search-white.svg')

            &__burger
                background-image: url('../img/svg/burger-close.svg')

            &__logo-elem
                background-image: url('../img/svg/logo-white.svg')

            &__menu 
                display none

            &__mobile-menu
                display block
                background-color $blue

                @media $tablet
                    width: 307px

                .container

                    @media $tablet
                        padding: 0

        .header__menu 
            display none