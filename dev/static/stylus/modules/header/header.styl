.header
    height: 71px
    border-bottom: 1px solid $gray

    .container 
        display: flex
        align-items: center
        height: 100%

    &__burger
        background-repeat: no-repeat
        background-image: url('../img/svg/burger.svg')
        background-size: contain
        width: 30px
        height: 30px

    &__logo
        flex-grow: 1
        text-align: center

    &__search-btn
        background-repeat: no-repeat
        background-image: url('../img/svg/header-search.svg')
        background-size: contain
        width: 30px
        height: 30px

    &__menu
        display: none