.header
    border-bottom: 1px solid $gray
    min-height: 71px

    @media $desktop
        border-bottom: none
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);

    .container 
        
        height 100%

    &__top
        min-height: 71px

        .container
            display flex
            align-items center
            height: 71px

            @media $desktop
                justify-content: center
                border-bottom: 1px solid $gray


    &__burger
        background-repeat: no-repeat
        background-image: url('../img/svg/burger.svg')
        background-size: contain
        width: 30px
        height: 30px
        cursor pointer

        @media $tablet
            width: 40px
            height: 40px

        @media $desktop
            display: none

    &__logo
        flex-grow: 1
        text-align: center

        @media $desktop
            flex-grow: 0

        a
            display: inline-block

    &__logo-elem
        margin 0 auto
        background-repeat: no-repeat
        background-image: url('../img/svg/logo.svg')
        background-size: contain
        width: 108px
        height: 47px
        cursor pointer

        @media $tablet
            width: 153px
            height: 65px
            margin-top: 4px
            margin-bottom: -4px

    &__search-btn
        background-repeat: no-repeat
        background-image: url('../img/svg/header-search.svg')
        background-size: contain
        width: 30px
        height: 30px
        cursor pointer


        @media $tablet
            width: 40px
            height: 40px

    &__search-block

        @media $desktop
            height: calc(100% + 1px)
            display: flex
            flex-direction: column
            justify-content: center
            padding: 0 22px
            border-left: 1px solid transparent
            border-right: 1px solid transparent
            border-bottom: 1px solid transparent

        &_active

            @media $desktop
                border-color: $gray4
                border-bottom-color: $white

            .header__search-btn
                background-image: url('../img/svg/search-blue.svg')



    &__menu
        display: none

        @media $desktop
            display: block
            padding-left: 29px
            padding-right: 16px

        .menu

            &__submenu
                display: none

            &__list
                display: flex

    &__search
        padding-bottom 24px
        display none

        @media $tablet
            padding-top: 30px
        
        .search 

            &__form
                display flex

            &__input
                flex-grow 1

                .input
                    border-top-right-radius: 0
                    border-bottom-right-radius: 0
                    
                    text-align left

            &__btn

                .btn 
                    border-top-left-radius: 0
                    border-bottom-left-radius: 0

    &__mobile-menu 
        display none
        padding-top 16px
        color $white
        height: calc(100vh - 71px)

        @media $tablet
            padding-top: 7px
            padding-bottom: 11px
            border-bottom-left-radius: 12px
            border-bottom-right-radius: 12px
            height: auto

        .mobile-menu

            &__item
                margin-bottom 16px

                font-weight 600
                font-size: 22px;
                line-height: 28px;
                letter-spacing: 0.02em;

                @media $tablet
                    font-size: 18px
                    border-bottom: 1px solid $white
                    margin-bottom: 0
                    position: relative

                a
                    @media $tablet
                        padding: 16px 60px 7px 30px
                        display: block

                &:last-child
                    margin-bottom: 0

                    @media $tablet
                        border-bottom: none

                &_hassub

                    @media $tablet
                        position: relative

                    &::after
                        @media $tablet
                            content: ''
                            display: block
                            position: absolute
                            width: 6px
                            height: 10px
                            background-image: url('../img/svg/menu-arrow.svg')
                            background-repeat: no-repeat
                            background-size: contain
                            right: 23px
                            top: 50%
                            transition: .3s transform ease

                &_active, &:hover

                    @media $tablet
                        background-color: $blue_light

                    &::after

                        @media $tablet
                            transform: rotate(180deg)

            &__submenu
                margin-bottom 8px
                margin-top: 17px

                font-size: 18px;
                line-height: 28px;
                letter-spacing: 0.02em;
                font-weight: normal

                &:last-child
                    margin-bottom 0

                @media $tablet
                    display: none
                    position: absolute
                    left: 100%
                    top: 0
                    background-color: $blue
                    width: 307px
                    border-top-right-radius: 12px
                    border-bottom-right-radius: 12px
                    background-color: $blue_light
                    margin-top: 0

                    font-weight: 600
                    font-size: 16px
                    line-height: 22px

                .submenu



                        &__item
                            margin-bottom: 8px

                            @media $tablet
                                margin-bottom: 0

                            a
                                @media $tablet
                                    display: block
                                    padding: 20px 30px 16px 30px
                                    position: relative

                                &::after
                                    @media $tablet
                                        content: ''
                                        width: calc(100% - 60px)
                                        height: 1px
                                        display: block
                                        position: absolute
                                        bottom: 0
                                        left: 30px
                                        right: 30px
                                        background-color: $white

                            &:last-child

                                a::after
                                    @media $tablet
                                        display: none



    &_menu-mob-opened 

        height 100vh

        @media $tablet
            height: auto
            border-bottom: none

        
        .header

            &__top
                background-color $blue

                @media $tablet
                    border-bottom: 1px solid $white
            
            &__search-btn
                background-image: url('../img/svg/search-white.svg')

            &__burger
                background-image: url('../img/svg/burger-close.svg')

            &__logo-elem
                background-image: url('../img/svg/logo-white.svg')

            &__menu 
                display none

            &__mobile-menu
                display block
                background-color $blue

                @media $tablet
                    width: 307px

                .container

                    @media $tablet
                        padding: 0

        .header__menu 
            display none