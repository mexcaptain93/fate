.header
    border-bottom: 1px solid $gray
    min-height: 71px
    z-index: 13
    background-color: $white
    position: sticky
    top: 0
    width: 100%

    @media $tablet
        position: static

    @media $desktop
        //border-bottom: none
        min-height: 85px
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);

    .container

        height 100%

    &__top
        min-height: 71px
        opacity: 0
        transition: .3s ease all

        @media $desktop
            min-height: 85px

        .container
            display flex
            align-items center
            height: 71px

            @media $desktop
                height: 85px
                justify-content: center
                //border-bottom: 1px solid $gray


    &__burger
        background-repeat: no-repeat
        background-image: url('../img/svg/burger.svg')
        background-size: contain
        width: 30px
        height: 30px
        cursor pointer

        @media $tablet
            width: 40px
            height: 40px

        @media $desktop
            display: none

    &__logo
        flex-grow: 1
        text-align: center

        @media $desktop
            flex-grow: 0

        a
            display: inline-block

    &__logo-elem
        margin 0 auto
        background-repeat: no-repeat
        background-image: url('../img/svg/logo.svg')
        background-size: contain
        width: 108px
        height: 47px
        cursor pointer

        @media $tablet
            width: 153px
            height: 65px
            margin-top: 4px
            margin-bottom: -4px

        @media $desktop
            width: 137px

    &__search-btn
        background-repeat: no-repeat
        background-image: url('../img/svg/header-search.svg')
        background-size: contain
        width: 30px
        height: 30px
        cursor pointer


        @media $tablet
            width: 40px
            height: 40px

        @media $tablet
            width: 29px
            height: 29px

    &__search-block

        @media $desktop
            height: calc(100% + 1px)
            display: flex
            flex-direction: column
            justify-content: center
            padding: 0 22px
            border-left: 1px solid transparent
            border-right: 1px solid transparent
            border-bottom: 1px solid transparent
            position: relative
            top: -1px

        &_active

            @media $desktop
                border-color: $gray4
                border-bottom-color: $white

            .header__search-btn
                background-image: url('../img/svg/search-blue.svg')



    &__menu
        display: none

        @media $desktop
            display: block
            flex-grow: 1
            padding-left: 29px
            padding-right: 16px
            z-index: 1

        .menu

            &__submenu
                display: none

            &__list
                display: inline-block
                flex-wrap: wrap

            &__dropdown-wrapper
                position: relative

                &:hover

                    .menu__dropdown
                        display: block

            &__dropdown
                display: none
                position absolute
                top 100%
                left -10px
                background-color $white
                box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1)

                .menu__item
                    padding 10px
                    color: $gray5

                    white-space: normal
                    line-height: 22px

                    &:hover
                        color $blue

                        .submenu
                            display: none

                    &::after
                        display: none

                    &_active

                        &::before
                            display: none

            &__dropdown-toggle
                background: none
                border: none
                outline: none
                margin-left: 16px
                cursor: pointer

                color: $gray5
                font-weight 600
                font-size 18px

            &__item
                display: inline-block
                margin-right 16px
                cursor pointer
                position relative
                padding 20px 0

                color: $gray5
                font-weight 600
                font-size 18px
                white-space: nowrap

                a
                    display block
                    width 100%
                    height 100%

                &_hassub
                    padding-right 10px

                    &::after
                        content: ''
                        background-image url('../img/svg/menu-arrow-down.svg')
                        display block
                        width 10px
                        height 6px
                        background-repeat: no-repeat
                        background-size: contain
                        position absolute
                        right -6px
                        top: calc(50% - 2px)

                &_other
                    @extend .header__menu .menu__item_hassub

                    line-height: 15px
                    padding-left: 15px

                    &::after
                        display: none

                &_active
                    color: $blue

                    &::before
                        content: ''
                        display: block
                        position: absolute;
                        top: -11px
                        left: calc(50% - 4px)
                        transform: translateX(-50%)
                        background-color: $blue
                        width: 76px
                        height: 3px

                    &::after
                        background-image url('../img/svg/menu-arrow-down-blue.svg')



                &:last-child
                    margin-right 0

                &:hover
                    color $blue

                    .submenu
                        display block
                        position absolute
                        top 100%
                        left -10px
                        background-color $white
                        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);


                        &__item
                            padding 10px
                            color: $gray5

                            white-space: normal
                            line-height: 22px

                            &:hover
                                color $blue


    &__search
        display none
        background-color: $white
        padding-bottom 24px
        padding-top: 25px
        position: relative
        top: -1px
        border-bottom: 1px solid $gray

        @media $tablet
            padding-top: 30px


        @media $desktop
            padding-top 17px
            padding-bottom 16px
            top: 0
            box-shadow: 0 5px 6px rgba(0, 0, 0, 0.1);



        .search

            &__form
                display flex

                @media $desktop
                    width 714px
                    margin 0 auto

            &__input
                flex-grow 1

                .input
                    border-top-right-radius: 0
                    border-bottom-right-radius: 0

                    padding: 14px 16px
                    border-right: none

            &__btn

                .btn
                    border-top-left-radius: 0
                    border-bottom-left-radius: 0

    &__mobile-menu
        display none
        padding-top 16px
        color $white
        min-height: calc(100vh - 71px)
        padding-bottom: 20px
        z-index: 100

        @media $tablet
            padding-top: 7px
            padding-bottom: 11px
            border-bottom-left-radius: 12px
            border-bottom-right-radius: 12px
            height: auto
            padding-bottom: auto
            min-height: auto

        .mobile-menu

            &__item
                margin-bottom 16px

                font-weight 600
                font-size: 22px;
                line-height: 28px;
                letter-spacing: 0.02em;

                @media $tablet
                    font-size: 18px
                    border-bottom: 1px solid $white
                    margin-bottom: 0
                    position: relative

                a
                    @media $tablet
                        padding: 16px 60px 7px 30px
                        display: block

                &:last-child
                    margin-bottom: 0

                    @media $tablet
                        border-bottom: none

                &_hassub

                    @media $tablet
                        position: relative

                    &::after
                        @media $tablet
                            content: ''
                            display: block
                            position: absolute
                            width: 6px
                            height: 10px
                            background-image: url('../img/svg/menu-arrow.svg')
                            background-repeat: no-repeat
                            background-size: contain
                            right: 23px
                            top: 50%
                            transition: .3s transform ease

                &_active, &:hover

                    @media $tablet
                        background-color: $blue_light

                    &::after

                        @media $tablet
                            transform: rotate(180deg)

            &__submenu
                margin-bottom 8px
                margin-top: 17px

                font-size: 18px;
                line-height: 28px;
                letter-spacing: 0.02em;
                font-weight: normal

                &:last-child
                    margin-bottom 0

                @media $tablet
                    display: none
                    position: absolute
                    left: 100%
                    top: 0
                    background-color: $blue
                    width: 307px
                    border-top-right-radius: 12px
                    border-bottom-right-radius: 12px
                    background-color: $blue_light
                    margin-top: 0

                    font-weight: 600
                    font-size: 16px
                    line-height: 22px

                .submenu



                        &__item
                            margin-bottom: 8px

                            @media $tablet
                                margin-bottom: 0

                            a
                                @media $tablet
                                    display: block
                                    padding: 20px 30px 16px 30px
                                    position: relative

                                &::after
                                    @media $tablet
                                        content: ''
                                        width: calc(100% - 60px)
                                        height: 1px
                                        display: block
                                        position: absolute
                                        bottom: 0
                                        left: 30px
                                        right: 30px
                                        background-color: $white

                            &:last-child

                                a::after
                                    @media $tablet
                                        display: none



    &_menu-mob-opened

        height 100vh

        @media $tablet
            height: auto
            border-bottom: none


        .header

            &__top
                background-color $blue

                @media $tablet
                    border-bottom: 1px solid $white

            &__search-btn
                background-image: url('../img/svg/search-white.svg')

            &__burger
                background-image: url('../img/svg/burger-close.svg')

            &__logo-elem
                background-image: url('../img/svg/logo-white.svg')

            &__menu
                display none

            &__mobile-menu
                display block
                background-color $blue

                @media $tablet
                    width: 307px

                .container

                    @media $tablet
                        padding: 0

        .header__menu
            display none