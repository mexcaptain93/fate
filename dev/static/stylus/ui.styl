.btn 

    background-color $blue
    border: none 
    outline: none
    border-radius: 4px
    border: 1px solid $blue
    padding 10px 20px
    cursor pointer

    font-family: mainFont
    font-size 16px
    line-height 26px
    color $white
    text-align center

    &:hover 
        background-color $blue_dark

    &:active 
        box-shadow: inset 0px 4px 4px rgba(0, 0, 0, 0.25);

.input
    outline: none
    border: 1px solid $gray3
    border-radius: 4px
    padding 10px 20px
    width 100%

    font-size: 16px;
    line-height: 26px;
    letter-spacing: 0.02em;
    color $black
    text-align center

    &:active 
        box-shadow: inset 0px 4px 4px rgba(0, 0, 0, 0.25);


.like-h3
    margin-bottom: 32px

    font-family: $RobotoSlab
    font-size: 24px
    line-height: 32px
    color: $black
    text-align: center

.like-h4
    font-family: $RobotoSlab
    font-size: 20px
    line-height: 28px


.article-block
    margin-bottom: 5px

    &::last-child
        margin-bottom: 0

    &__image
        margin-bottom: 8px

    &__category
        margin-bottom: 4px

        color: $blue
        text-transform: uppercase
        font-size: 14px

    &__name
        margin-bottom: 4px

    &__meta
        margin-bottom: 8px
        display: flex

        font-size: 14px
        color: $gray3

    &__views
        margin-right: 16px
        vertical-align: middle

        &::before
            display: inline-block
            content: ''
            vertical-align: middle
            background-image: url('../img/svg/views.svg')
            background-repeat: no-repeat
            background-size: contain
            width: 15px
            height: 11px
            margin-right: 4px


    &__stars
        margin-right: 16px
        vertical-align: middle

        &::before
            display: inline-block
            content: ''
            vertical-align: middle
            background-image: url('../img/svg/stars.svg')
            background-repeat: no-repeat
            background-size: contain
            width: 15px
            height: 11px



    &__mail
        margin-right: 16px
        vertical-align: middle

        &::before
            display: inline-block
            content: ''
            vertical-align: middle
            background-image: url('../img/svg/mail.svg')
            background-repeat: no-repeat
            background-size: contain
            width: 14px
            height: 14px
            margin-right: 5px

        a
            text-decoration: underline

    &__descr
        overflow: hidden
        width: 100%
        height: 140px

        font-size: 16px
        line-height: 28px
        letter-spacing: 0.02em
        color: $gray2

        &.opened
            overflow: visible
            height: auto

    &__push
        height: 89px
        position: relative
        top: -35px
        margin-bottom: -35px
        background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 72.4%)

        &::before
            content: ''
            display: block
            background-image: url('../img/svg/push.svg')
            background-repeat: no-repeat
            background-size: contain
            width: 16px
            height: 16px
            position: absolute
            top: 50%
            left: 50%
            transition: .3s ease all
            transform: translate(-50%, -50%) rotate(0deg)
            cursor: pointer

        &.opened

            &::before
                transform: translate(-50%, -50%) rotate(180deg)

