.subheading
    display: none

    @media $tablet
        display: block
        font-weight: 600
        font-size: 14px
        line-height: 23px
        text-align: right
        color: $gray3

        
.comments

    @media $desktop
        padding-top: 16px
        border-top: 1px solid $gray7

    &__heading
        margin-bottom: 33px

        text-align: left
        font-family: $RobotoSlab
        font-style: normal
        font-weight: normal
        font-size: 20px
        line-height: 26px
        color: $black

        @media $tablet
            font-size: 24px

        @media $desktop
            margin-bottom: 35px


    &__counter
        margin-left: 9px

        font-family: mainFont
        font-size: 16px
        color: $gray2

        @media $desktop
            margin-left: 10px

    &__list
        margin-bottom: 32px

    &__more
        margin-bottom: 48px

        @media $desktop
            margin-bottom: 51px

        .btn

            @media $tablet
                &::after
                    content: ''
                    display: inline-block
                    background-image: url('../img/svg/push.svg')
                    width: 16px
                    height: 16px
                    position: relative
                    top: 3px
                    left: 8px

    &__item
        margin-bottom: 24px

        &:last-child
            margin-bottom: 0

    .comment

        &__author
            margin-bottom: 8px

            font-family: $RobotoSlab
            font-size: 14px
            line-height: 28px
            color: $black

            @media $desktop
                font-size: 18px
                line-height: 28px

            a
                display: none

                @media $desktop
                    display: inline-block
                    margin-left: 6px

                    color: $gray6
        &__text
            margin-bottom: 4px

            font-size: 11px
            line-height: 24px
            color: $gray_dark

            @media $desktop
                font-size: 16px
                line-height: 28px


        &__date-time
            font-size: 11px
            line-height: 15px
            color: $gray3

            @media $desktop
                font-size: 12px




    .form

        &__row

            &:nth-child(-n+2)

                @media $tablet
                    width: calc(50% - 15px)
                    display: inline-block

            &:first-child
                @media $tablet
