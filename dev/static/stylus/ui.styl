        &__label
            margin-bottom: 8px

            color: $gray2
            font-size: 14px
            line-height: 13px

        &__input
            margin-bottom: 16px

            @media $desktop
                margin-bottom: 24px

            .input

                @media $desktop
                    padding: 10px 16px

                    line-height: 18px


            .textarea
                margin-bottom: 16px

                @media $desktop
                    margin-bottom: 0

        &__privacy
            position: relative
            margin-bottom: 24px

            font-size: 14px
            line-height: 18px

            @media $desktop
                margin-top: -13px
                margin-bottom: 15px

            .checkbox

                & + label
                    padding-left: 23px

                    &::before
                        position: absolute
                        top: 2px
                        left: 0

            a
                color: $blue


        &__btn

            @media $desktop
                width: 185px


.pagination
    display: flex
    
    font-size: 16px
    line-height: 18px
    letter-spacing: .16px

    &__list
        display: flex
        margin: 0 auto

    &__item
        height: 48px
        width: 48px
        text-align: center
        line-height: 48px

        a
            display: block
            width: 48px
            height: 48px

        &_active
            color: $white
            background-color: $blue

        &:hover
            color: $blue
            background-color: $white


    &__prev
        display: none

        @media $tablet
            display: block
            @extend .pagination__item

            background-image: url('../img/svg/slider-prev.svg')
            background-position: center center
            background-repeat: no-repeat
            cursor: pointer

    &__next
        display: none

        @media $tablet
            display: block
            @extend .pagination__item

            background-image: url('../img/svg/slider-next.svg')
            background-position: center center
            background-repeat: no-repeat
            cursor: pointer


