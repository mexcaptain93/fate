.feedback
  
  .heading .like-h3
    text-align: left

  .form
    margin-bottom: 40px

    @media $tablet
      border: 1px solid #9F9F9F
      box-shadow: 0 0 4px rgba(0, 0, 0, 0.1)
      border-radius: 4px
      padding: 24px 16px 32px


    &__row
      display: block

      @media $tablet
        display: flex
        justify-content: space-between

      &_wide
        display: block

        .form__item
          width: 100%

      &_captcha

        @media $tablet
          margin-bottom: 24px
          justify-content: flex-start
          align-items: center

        .form

          &__item

            @media $tablet
              margin-bottom: 0

            &:first-child
              margin-bottom: 16px

              @media $tablet
                margin-bottom: 0

          &__label
            margin-bottom: 14px

          &__captcha

            a
              display: block
              margin-top: 4px

              font-size: 13px
              line-height: 17px
              color: $blue

          &__input

            .input
              width: 160px

          &__item

            @media $tablet
              width: auto

            &:last-child

              @media $tablet
                margin-top: 20px
                margin-left: 16px

    &__item
      margin-bottom: 24px

      @media $tablet
        width: calc((100% - 16px) / 2)
        margin-bottom: 16px

    &__label
      @extend .comments .form__label

    &__privacy

      @extend .comments .form__privacy

      @media $tablet
        margin-top: 0

    &__btn

      @media $tablet
        width: 100%




